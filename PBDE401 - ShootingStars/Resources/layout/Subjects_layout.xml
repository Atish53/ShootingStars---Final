<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutbackground">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Subject"
            android:textSize="22dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    
    </RelativeLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:layout_margin="35dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnbiology"
                    android:src="@drawable/biology"
                    android:layout_width="120dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:text="@string/Biology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:layout_margin="35dp"
            android:layout_marginLeft="9.1dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:src="@drawable/english"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/btnenglish"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:text="@string/English"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:layout_margin="35dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnmaths"
                    android:src="@drawable/maths"
                    android:layout_width="120dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:id="@+id/txtMaths"
                    android:layout_marginTop="8dp"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:text="@string/Maths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:layout_margin="15dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginLeft="9.1dp"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.6dp"
                android:id="@+id/linearLayout2"
                android:layout_marginBottom="0.0dp">

                <ImageButton
                    android:src="@drawable/history"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:id="@+id/btnhistory"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:text="@string/History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" 
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>




    </GridLayout>
        
        
       

</LinearLayout>
