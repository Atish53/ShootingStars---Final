<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Create a quiz"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <TextView
        android:text="Quiz Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quiz_name" />
    <TextView
        android:text="Quiz Subject"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView3" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="46.0dp"
        android:id="@+id/spinner_quizsub"
        android:tooltipText="Select a subject to add the quiz to: " />
    <Button
        android:text="Create Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:id="@+id/make_quiz" 
        android:padding="5dp"
         />
    <EditText
        android:inputType="textMultiLine"
        android:hint="Question 1"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:id="@+id/question1" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:hint="Answer 1"
        android:id="@+id/answer1" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:id="@+id/question2"
        android:hint="Question 2"/>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:hint="Answer 2"
        android:id="@+id/answer2" />

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:id="@+id/question3"
        android:hint="Question 3"
        android:padding="5dp"
        />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:hint="Answer 3"
        android:id="@+id/answer3" />

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:id="@+id/question4"
        android:padding="5dp"
       android:hint="Question 4"/>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:hint="Android 4"
        android:id="@+id/answer4" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:id="@+id/question5"
        android:hint="Question 5"/>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="26.5dp"
        android:padding="5dp"
        android:hint="Answer 5"
        android:id="@+id/answer5" />

</LinearLayout>

