<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:minWidth="25px"
    android:minHeight="25px">

    <ImageView
        android:src="@drawable/WallBG"
        android:layout_width="470.3dp"
        android:layout_height="814.0dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="22.6dp" />

    <TextView
        android:text="Welcome to Shooting Stars"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="386.3dp"
        android:layout_height="71.3dp"
        android:id="@+id/textView1"
        android:textColor="#e54704ba"
        android:textSize="113px"
        android:layout_marginLeft="16.0dp"
        android:layout_marginTop="7.3dp"
        android:layout_marginBottom="0.0dp"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="441.7dp"
        android:layout_height="310.0dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/educationtree"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="0.0dp" />

    <TextView
        android:text="We aim to help educate all the kids around South Africa who do not have proper access to study materials"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="487.6dp"
        android:layout_height="148.4dp"
        android:id="@+id/textView2"
        android:textColor="#e5ffd000"
        android:textSize="103px"
        android:layout_marginLeft="16.0dp"
        android:layout_marginTop="297.5dp"
        android:layout_marginBottom="5.8dp"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="505.1dp"
        android:layout_height="343.7dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/onlinegrad"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="453.6dp"
        android:layout_marginLeft="0.0dp" />

</RelativeLayout>
